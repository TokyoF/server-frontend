---
import type { Alumno } from "../types";

interface AlumnoCardProps {
  alumno: Alumno;
}

const { alumno } = Astro.props as AlumnoCardProps;
---

<div
  class="alumno-card bg-white border border-gray-300 rounded-lg p-4 text-center shadow-lg transition-transform duration-200 hover:translate-y-[-5px]"
>
  <img
    class="w-24 h-24 rounded-full mb-4 mx-auto"
    src={alumno.imagenUrl}
    alt={`${alumno.nombre} ${alumno.apellido}`}
  />
  <div class="alumno-info mb-4">
    <h2 class="text-lg font-semibold text-gray-800">
      {alumno.nombre}
      {alumno.apellido}
    </h2>
    <p class="text-gray-600">CÃ³digo: {alumno.codigoEstudiante}</p>
  </div>
</div>

<style>
  .alumno-card {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 16px;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
    width: 200px;
    margin: 10px;
  }

  .alumno-card:hover {
    transform: translateY(-5px);
  }

  .alumno-card img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 8px;
  }

  .alumno-info {
    margin-bottom: 16px;
  }

  .alumno-info h2 {
    margin: 0;
    font-size: 1.25rem;
    color: #333;
  }

  .alumno-info p {
    margin: 0;
    color: #777;
  }
</style>
