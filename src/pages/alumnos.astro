---
import { getAlumnos } from "../data/alumnos";
import AlumnoCard from "../components/AlumnoCard.astro";
import type { Alumno } from "../types";

const alumnos = await getAlumnos();
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Alumnos Registrados</title>
    <link rel="stylesheet" href="/src/styles.css" />
  </head>
  <body>
    <h1 class="text-2xl font-bold text-center mb-8">Alumnos Registrados</h1>
    <div class="alumnos-grid flex flex-wrap gap-6 justify-center">
      {alumnos.map((alumno) => <AlumnoCard alumno={alumno} />)}
    </div>
  </body>
</html>

<style>
  .alumnos-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }
</style>
