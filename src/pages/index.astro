---
import AlumnoCard from "../components/AlumnoCard.astro";
import type { Alumno } from "../types";

const response = await fetch("http://localhost:8080/api/v1/alumno");
const alumnos: Alumno[] = await response.json();
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Listado de Alumnos</title>
    <link rel="stylesheet" href="/src/styles.css" />
  </head>
  <body>
    <h1 class="text-2xl font-bold text-center mb-8">Listado de Alumnos</h1>
    <div class="alumnos-grid flex flex-wrap gap-6 justify-center">
      {alumnos.map((alumno) => <AlumnoCard alumno={alumno} />)}
    </div>
  </body>
</html>

<style>
  .alumnos-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }
</style>
